@model IEnumerable<Event>

<h2>All Events</h2>

<div >
    
    <a class="btn btn-outline-light" href="/Event/InsertEvent/" data-inline="true">Create a New Event</a>
</div>

<form asp-action="Index" method="get" align="right">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" data-inline="true" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" />
            @*<a asp-action="Index">Back to Full List</a>*@
        </p>
    </div>
</form>

<div id="table-pages">

    <table class="table">
        <tr>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]"> 
                   @Html.DisplayNameFor(model=>model.Date)
               </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EventNameSortParam"]">
                    @Html.DisplayNameFor(model=>model.EventName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AttendeeSortParam"]">
                    @Html.DisplayNameFor(model=>model.Attendees)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EventTypeSortParam"]">
                    @Html.DisplayNameFor(model=>model.EventType)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SpecialAttributeSortParam"]">
                    @Html.DisplayNameFor(model=>model.SpecialAttribute)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AddressSortParam"]">
                    @Html.DisplayNameFor(model=>model.Address)
                </a>
            </th>
             <th></th>
        </tr>

        @foreach (var all_events in @Model)
        {
            <tr>
                
                <td>@all_events.Date</td>
                <td>@all_events.EventName</td>
                <td>@all_events.Attendees</td>
                <td>@all_events.EventType</td>
                <td>@all_events.SpecialAttribute</td>
                <td>@all_events.Address</td>
                <td>
                    <a href=/Event/ViewEvent/@all_events.EventID>View</a> |
                    <a href="/Event/ViewUpdateEvent/@all_events.EventID">Update</a>
                </td>
            </tr>
        }

    </table>
</div>






